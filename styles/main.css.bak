* {			/* reseting the margin and padding from browser*/
	margin: 0;
	padding: 0;
}
label {			/* send all the label elements to float left and width 15 em and alligning to right*/
    float: left;
    width: 12em; /*this moves the label to the left a little more and helps the form to looks exactly as the one in the pdf*/
    text-align: right;
}

input, label, select { /* applying the properties to the selectors*/

	font-size:90%;
	margin-left: .5em;
	margin-bottom: .5em;
    
}
select#order_type input{
	width: 15 em;  /* applying 15 em to the input button of order type because it was taking another size from other style*/
}
div#payment_method { /*we remove all the inherited properties that come from other elements, cleaning all because it made more hard to move the radio buttons.*/
	/*margin:0;
	padding:0;
	clear:both;
	width:auto;
	text-align: left;*/

}

input:required {
	border: 2px solid orange; /* this goes to all the input elements who have the required attribute*/
}
div#SubmitField input{ /* applying the width adjusment of the input inside the div*/
	width:10em;
	text-align:center;
}
div#SubmitField {
	
	text-align:center; /* this align the buttons to the middle of the box on submit fieldset*/
}
input#reset_id {
	width:10em;  /* this align the reset button to make it look more like the one in the photo of the assignment*/
}
input#submit_id {
	margin-left:12.5em; /* this create a margin on the left to move all the buttons to the correct position*/
	width:10em;	 /* this align the submit button to make it look more like the one in the photo of the assignment*/
}
input#bill_me { /*align the button with the label*/
	float:left; /*move the button input to the left of the label, removing this misplace the radio button*/
	margin-top:.15em; /*aligning the button with the label*/
	margin-right:0px;
	margin-left:3em; /*distance from the fieldset of the left*/
	width:1em; /*ajust the pixels for input button for bill me*/
	float:center;

}
input#credit_card { /*align the button with the label*/
	
	margin-top:.15em; /*aligning the button with the label*/
	margin-right:0px;
	margin-left:4em; /*distance between the radio button of the left*/
	width:1em;  /*ajust the pixels for input button for credit_card*/
	float:left; /*this element is what put the radio button in the left of the label. carefull here.*/
}
label#bill_label {  /*label positioning*/
	width: 3.4em; /*reduce the width the of the label to move it closer to the radio button.*/
	height: 1px; /*adding height to the */
	margin-left:0px; /*over writting the 0.5 em inherited style */

}
label#credit_label{  /*label positioning, over write the 15 em inherited that applies to all elements, ID have more priority*/
	width: 6em;
	height: 1px;
	margin: 0px;
	
	
}
input {
	width: 15em;
	margin-left: .5em;
	margin-right: .5em;
	margin-bottom: .5em;
	border: 1px solid black;  /* 1 px as the assignment request, in my opinion 2 px looks better. */

}
legend{ /* coloring the legend letters and adjusting size */
	color: grey;
	font-weight:bold;
	margin-bottom: .5em;
	font-size: 85%;
}
fieldset { /*  adjusting the fieldset that contain all the inputs*/
    margin-top: 1em;
    margin-bottom: 1em;
    padding-top: .5em;
}

input[type="radio"] { /* align the width of radio button automatically*/
	width:auto;
}

div#credit {
		width: 8em;	/* reducing it because default was 15 em and was too long*/
}
select#order_type{   /* applying the black line around because another style was overlaping the correct value*/
	width:15em;
	border: 1px solid black;
}	
select#card_type{		/* applying the black line around because another style was overlaping the correct value*/	
	width:15em;
	border: 1px solid black;
	
}
body  {	
	background-image: url("../images/berry.jpg");
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 100%;
}

div#frame {
	margin: 25px auto;
	padding: 20px 30px 20px 20px;
	width: 50%;
	min-width: 900px;
	background-color: #ffffff;	
	background-image: linear-gradient(#ffffff 20%, #fdf7e8 70%, #ffffff 100%);
	border: 2px solid #009926;
	border-radius: 8px;
	box-shadow: 0px 0px 90px 2px #008020;
}

p {
	margin: 20px 0px;
}

a {
	color: #008020; 
}

a:link, a:visited { 
	text-decoration: none; 
}

a:hover, a:focus { 
    text-decoration: underline; 
}

/* Header */
header {
	height: 160px;
	border-bottom: 2px solid #e8b417;
}
	
header img { 
	float: left; 
} 

header div#header-line-1 {
	font-size: 300%;
	font-weight: bold;	
	text-align: right;
	color: #ecc03b;
	text-shadow: 2px 2px 2px black;
}

header div#header-line-2 {
	font-size: 130%;
	font-weight: bold;
	text-align: right;
	font-style: italic;
	color: #008020;
}

/* aside */
aside {
	width: 230px;
	float: left;
	margin: 30px 10px 0px 0px;
}

aside div.sidebar-title {
	font-size: 115%;
	font-weight: bold;
	color: #d1a215;
}

aside ul {
	margin: 15px 0px 0px 15px;
}

aside ul li {
	margin: 15px 0px 0px 0px;
}

aside ul li a{
	font-style: italic;
	font-size: 90%;
}

/* Main */
main {
	margin: 20px 0;
	padding-left: 20px;
	float: left;
	width: 638px;
	min-height: 600px;
	border-left: 2px solid #e8b417;
}

main h1 { 
	margin: 0;
	font-size: 200%;
}

main h1:first-letter { 
	font-size: 240%;
}

main h2 {
	margin: 25px 0px;
	font-size: 125%;
}

main h3 {	
	font-size: 110%;
}

main ul#product-categories {
	list-style-type: none;
}

main ul#product-categories li {
	margin: 35px 0px;
}

main ul#product-categories h3 {
	margin-top: 10px;
}

main ul#product-categories p{
	margin-top: 5px;
}

main ul#product-categories img {
	border: 2px solid #e8b417;
	border-radius: 10px;
	box-shadow: 0px 0px 6px 2px #ecc03b;
}

/* the styles for the navigation menu */
#nav_menu {
	margin-top: 2px;
}

#nav_menu ul {
	list-style-type: none;
	position: relative;
}

#nav_menu ul li {
	float: left;
}

#nav_menu ul li a {
    background-image: linear-gradient(#fdf7e8 15%, #ffffff 55%, #fdf7e8 100%);
	width: 180px;
	padding: 1em 0;
	display: block;
    text-align: center;    
    text-decoration: none;  
	font-weight: bold;
}

#nav_menu ul li a:hover, #nav_menu ul li a:focus {
	color: #d1a215;
}

#nav_menu a.current, #nav_menu a.current:hover, #nav_menu a.current:focus {
	color: #d1a215;	
	font-weight: bold;
}

/* Footer */
footer {
	clear: left;
	border-top: 2px solid #e8b417;
}

footer p {
	font-size: 80%;
	text-align: center;
}